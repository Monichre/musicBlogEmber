{{#if updateArticleForm}}

    <div class="form-content">
      <form>
        <div class="form-group">
          <label for="title">Title</label><br>
          {{input value=title id="title"}}
        </div>
        <div class="form-group">
          <label for="author">Author</label><br>
          {{input value=author id="author"}}
        </div>
        <div class="form-group">
          <label for="content">Content</label><br>
          {{textarea value=content id="content"}}
        </div>
        <div class="form-group">
          <label for="imageUrl">Image</label><br>
          {{input value=imageUrl id="imageUrl"}}
        </div>
        <div class="form-group">
          <label for="date">Date</label><br>
          {{input value=date id="date"}}
        </div>
        <button {{action 'updateArticle' article}}>Update</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateFormShow'}}>Update Article</button>
{{/if}}
